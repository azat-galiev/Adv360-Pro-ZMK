macro_switch_to_ru: macro_switch_to_ru {
    compatible = "zmk,behavior-macro";
    label = "macro_switch_to_ru";
    #binding-cells = <0>;
    wait-ms = <1>;
    bindings
        = <&macro_press &kp LEFT_ALT &kp LEFT_SHIFT>
        , <&macro_tap &kp N1>
        , <&macro_release &kp LEFT_SHIFT &kp LEFT_ALT>
        ;
};

macro_switch_to_en: macro_switch_to_en {
    compatible = "zmk,behavior-macro";
    label = "macro_switch_to_en";
    #binding-cells = <0>;
    wait-ms = <1>;
    bindings
        = <&macro_press &kp LEFT_ALT &kp LEFT_SHIFT>
        , <&macro_tap &kp N0>
        , <&macro_release &kp LEFT_SHIFT &kp LEFT_ALT>
        ;
};

mo_or_switch_to_en: mo_or_switch_to_en {
    compatible = "zmk,behavior-hold-tap";
    label = "mo_or_switch_to_en";
    #binding-cells = <1>;
    flavor = "tap-preferred";
    tapping-term-ms = <200>;
    bindings = <&mo>, <&macro_switch_to_en>;
};

mo_or_switch_to_ru: mo_or_switch_to_ru {
    compatible = "zmk,behavior-hold-tap";
    label = "mo_or_switch_to_ru";
    #binding-cells = <1>;
    flavor = "tap-preferred";
    tapping-term-ms = <200>;
    bindings = <&mo>, <&macro_switch_to_ru>;
};
